n = int(input())
height = n-2
width = n * 3
print('-'.center(width,"-"))
for stick_count in range(1, height, 2):
    print('|'+('(*)' * stick_count).center(width-2, ' ')+'|')

print('|'+'WELCOME'.center(width-2, '*')+'|')

for stick_count in range(height-1, 0, -2):
    print('|'+('(*)' * stick_count).center(width-2, ' ')+'|')
print('-'.center(width, '-'))
